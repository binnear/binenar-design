{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "baseUrl": "./src",
        "paths": {
            "components": ["components"],
            "actions": ["actions"],
            "reducers": ["reducers"],
            "store": ["store"]
        },
        "lib": ["dom","es2015","es2015.promise"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeRoots": [
        "./node_modules/@types",
        "./@types",
    ]
}